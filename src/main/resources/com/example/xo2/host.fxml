<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox onKeyPressed="#enterGame" prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: FBD4E4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.xo2.Host">
   <children>
      <Label alignment="CENTER" onKeyPressed="#enterGame" prefHeight="18.0" prefWidth="664.0" text="Enter your name">
         <font>
            <Font name="System Bold Italic" size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txNameInput" alignment="CENTER" promptText="Enter name">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </TextField>
      <Label fx:id="scene" alignment="CENTER" onKeyPressed="#enterGame" prefHeight="18.0" prefWidth="810.0" text="Enter the size of the board">
         <font>
            <Font name="System Bold Italic" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txSizeInput" alignment="CENTER" promptText="Enter here">
         <font>
            <Font size="24.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="btEnterGame" alignment="CENTER" mnemonicParsing="false" onAction="#enterGame" text="Enter the game">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="225.0" top="30.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
